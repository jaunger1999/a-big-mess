weapondelta
{
  name RocketLauncher
  
  remflags NOAUTOFIRE
  
  states
  @"
  Ready:
	PKRL A 1 A_WeaponReady
	Loop
  //9 Lower and 4 Raise result in the exact same timing as vanilla doom.
  Deselect:
	PKRL A 1 A_Lower(9)
	Loop
   Select:
	PKRL A 1 A_Raise(4)
	Loop
  Fire:
    PKRL A 2 
	PKRL A 4 A_GunFlash
	PKRL B 2
	PKRL D 3 A_FireMissile
	PKRL C 3
	PKRL BE 2
	PKRL FG 1
	PKRL A 0 A_ReFire
	goto Ready
  Flash:
	PKRF A 3 Bright A_Light1
	PKRF B 2 Bright
	PKRF C 2 Bright A_Light2
	PKRF DE 3 Bright
	Goto LightDone
	"@
}

thingdelta {
	name RocketShot
	
	addflags WINDTHRUST
}