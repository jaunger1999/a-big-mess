/*
 * Faster "firerate" + smoothdoom animation
 */
weapondelta
{
  name Chainsaw
  remflags SILENCEABLE
  
  states
  @"
  Ready:
    SAWS CDEF 2 A_WeaponReady
    loop
  //9 Lower and 4 Raise result in the exact same timing as vanilla doom.
  Deselect:
    SAWS C 1 A_Lower(9)
    loop
  Select:
    SAWS C 1 A_Raise(4)
    loop
  Fire:
    SAWG AB 3 A_Saw
    SAWG B 0 A_ReFire
    goto Ready
  "@
}