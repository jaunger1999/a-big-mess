weapondelta
{
  name PlasmaRifle
  
  states
  @"
  Ready:
    PLSG A 1 A_WeaponReady
    loop
  //9 Lower and 4 Raise result in the exact same timing as vanilla doom.
  Deselect:
    PLSG A 1 A_Lower(9)
    loop
  Select:
    PLSG A 1 A_Raise(4)
    loop
  Fire:
    TNT1 A 0 A_Jump(128, FireAlt)
    PLSA B 1 A_FirePlayerMissile(PlasmaShot)
    PLSA C 1
    PLSA D 1
    goto Cooldown
    
    FireAlt:
    PLSA B 1 A_FirePlayerMissile(PlasmaShot)
    PLSA C 1
    PLSA E 1
    goto Cooldown
    
    Cooldown:
    TNT1 A 0 A_ReFire
    PKPL ABCD 1
    PKPL E 12
    PKPL DCBA 1
    goto Ready
  Flash:
    PLSF A 4 bright A_Light1
    goto LightDone
  Flash2:
    PLSF B 4 bright A_Light1
    goto LightDone
  "@
}