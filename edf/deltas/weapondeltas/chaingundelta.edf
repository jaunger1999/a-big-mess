weapondelta
{
  name Chaingun
  
  states
  @"
  Ready:
    TCGG A 1 A_WeaponReady
    loop
  //9 Lower and 4 Raise result in the exact same timing as vanilla doom.
  Deselect:
    TCGG A 1 A_Lower(9)
    loop
  Select:
    TCGG A 1 A_Raise(4)
    loop
  Fire:
    TNT1 A 0 A_EjectCasing(592, 64, -256, ChaingunCasing)
    TCGG A 1 bright A_FireCustomBullets(PISTOL, custom, 1, 6, 3, Flash, 10, 2)
	TCGG B 1
	TCGG C 1
	TCGG D 1
	TNT1 A 0 A_JumpIfNoAmmo(Deselect)
	TNT1 A 0 A_EjectCasing(592, 64, -256, ChaingunCasing)
	TCGG A 1 bright A_FireCustomBullets(PISTOL, custom, 1, 3, 6, Flash2, 10, 2)
	TCGG B 1
	TCGG C 1
	TCGG D 1
	TNT1 A 0 A_Refire
    Goto FinishFire
  FinishFire:
	TCGG A 1 A_WeaponReady
	TCGG BCD 2 A_WeaponReady
	goto Ready
  Flash:
    TCGF A 1 Bright A_Light1
	TCGF B 1 Bright A_Light2
	TNT1 A 2 A_Light1
	Goto LightDone
  Flash2:
    TCGF C 1 Bright A_Light1
	TCGF D 1 Bright A_Light2
	TNT1 A 2 A_Light1
    goto LightDone
  "@
}