thingtype AstralDemon
{
  doomednum 30016
  basictype FlyingMonster

  spawnhealth 400
  speed       16
  radius      31
  height      56
  painchance  20
  mass        1000

  addflags NOGRAVITY|FLOAT|MONSTERPASS

  seesound "astral/sight"
  painsound "astral/pain"
  deathsound "astral/death"

  bloodtype.normal PersistentDoomBlood
  bloodtype.impact PersistentDoomBlood
  bloodtype.rip PersistentDoomBlood  
  bloodtype.crush DoomBloodSpray

  obituary_normal "was burned down by an Astral Cacodemon"

  states
  @"
    Spawn:
		ASTR A 10 A_Look
		goto Spawn
	See:
		ASTR A 3 A_Chase
		goto See
	Pain:
		ASTR H 3 
		ASTR I 3 A_Pain
		goto See
	Missile:
		ASTR A 1 A_FaceTarget
		ASTR E 1 A_PlaySoundEx("astral/attack", chan_auto, false, attn_normal)
		ASTR EEEEEEE 1 A_Chase
		ASTR F 5 A_FaceTarget
		ASTR G 0 A_FatAttack3
		ASTR G 3 A_HeadAttack
		goto See
	Death:
		ASTR J 8 
		ASTR K 8 A_Scream
		ASTR LMNO 8 
		ASTR P 8 
		ASTR Q 8 A_Fall
		ASTR R 8 
		ASTR S -1 
		stop
	Raise:
		ASTR SQPOMLK 5 
		goto See
  "@
}

sound "astral/sight"   { lump "DSASTSIT"; pitchvariance Doom; }
sound "astral/pain"    { lump "DSASTPN"; pitchvariance Doom; }
sound "astral/death"   { lump "DSASTDTH"; pitchvariance Doom; }
sound "astral/attack"  { lump "DSASTATK"; pitchvariance Doom; }