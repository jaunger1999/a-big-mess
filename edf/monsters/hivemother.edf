thingtype HiveMother
{
  doomednum   30024
  basictype Monster
  
  spawnhealth  2000
  speed        18
  radius       60.0
  height       110.0
  damage       0
  reactiontime 8
  painchance   10
  mass         5000

  bloodtype.normal PersistentDoomBlood
  bloodtype.impact PersistentDoomBlood
  bloodtype.rip PersistentDoomBlood  
  bloodtype.crush DoomBloodSpray

  seesound    "hivemother/sight" // This uses sound mnemonics defined at the bottom of this EDF file, as well as pre-defined
  painsound   "hivemother/pain" 
  deathsound  "hivemother/death"
  activesound "hivemother/active"

  obituary_normal "was dominated by a hive mother" // The message displayed when the player is killed by this
                                                        // monster, using a projectile or other miscellaneous attack.
  states
  @"
    Spawn:
      HIVE AB 10 A_Look
      loop
    See:
      HIVE ABCDEF 3 A_Chase
      loop
    Missile:
      HIVE G   4        A_FaceTarget
      HIVE H   4        A_FaceTarget
      HIVE I   1 bright A_FatAttack1
      HIVE J   1 bright A_FatAttack2
      HIVE I   1 bright A_FatAttack3
	  HIVE J   1 bright A_FatAttack1
	  HIVE I   1 bright A_FatAttack2
	  HIVE J   1 bright A_FatAttack3
	  HIVE I   1 bright A_FatAttack1
      goto See
    Pain:
	  HIVE N   3        A_FaceTarget
      HIVE O   3        A_Pain
      HIVE P   3        A_FaceTarget
      HIVE Q   3        A_FaceTarget
      HIVE R   1 bright A_CyberAttack
	  HIVE S   1 bright A_FaceTarget
	  HIVE R   1 bright A_CyberAttack
	  HIVE S   1 bright A_FaceTarget
	  HIVE R   1 bright A_CyberAttack
      HIVE S   3 bright A_FaceTarget
      HIVE TUVWX 3      A_FaceTarget
	  HIVE ABCDEF 1     A_Chase
      goto See
    Death:
      HIVD A      10
      HIVD B       5 A_Scream
      HIVD C       5 
      HIVD D       5 A_Fall
	  HIVD EFGHIJ  5
      HIVD K      -1
      stop
  "@
}

sound "hivemother/sight"  { lump = "DSHISIT"; pitchvariance Doom; }
sound "hivemother/active"  { lump = "DSHIACT"; pitchvariance Doom; }
sound "hivemother/death"  { lump = "DSHIVEDT"; pitchvariance Doom; }
sound "hivemother/pain"  { lump = "DSHIVEPN"; pitchvariance Doom; }